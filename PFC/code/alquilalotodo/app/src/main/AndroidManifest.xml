<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/logo_app"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AlquilaloTodo"
        tools:targetApi="31">
        <activity
            android:name=".ui.activities.ContactosActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activities.ChatActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activities.OtherUserProfileActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activities.RentProductoActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".ui.activities.RentProductoEditActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".ui.activities.ConfiguracionUsuarioActivity"
            android:exported="false"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".ui.activities.ProductItemHomeActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activities.ProductItemActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activities.GetStartedActivity"
            android:exported="true"
            android:theme="@style/Theme.SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activities.RegisterActivity"
            android:exported="false"
            android:label="@string/title_activity_get_started"
            android:theme="@style/Theme.AlquilaloTodo.NoActionBar" />
        <activity
            android:name=".controler.MainFragmentControlerActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:theme="@style/Theme.AlquilaloTodo"
            android:windowSoftInputMode="adjustPan" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>